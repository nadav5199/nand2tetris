/**
 * Memory of 4K 16-bit registers.
 * If load is asserted, the value of the register selected by
 * address is set to in; Otherwise, the value does not change.
 * The value of the selected register is emitted by out.
 */
CHIP RAM4K {
    IN in[16], load, address[12];
    OUT out[16];

    PARTS:
    DMux8Way(in=load, sel=address[0..2], a=aOut, b=bOut, c=cOut, d=dOut, e=eOut, f=fOut, g=gOut, h=hOut);
    RAM512(in=in, load=aOut, address=address[3..11], out=outA);
    RAM512(in=in, load=bOut, address=address[3..11], out=outB);
    RAM512(in=in, load=cOut, address=address[3..11], out=outC);
    RAM512(in=in, load=dOut, address=address[3..11], out=outD);
    RAM512(in=in, load=eOut, address=address[3..11], out=outE);
    RAM512(in=in, load=fOut, address=address[3..11], out=outF);
    RAM512(in=in, load=gOut, address=address[3..11], out=outG);
    RAM512(in=in, load=hOut, address=address[3..11], out=outH);
    Mux8Way16(a=outA, b=outB, c=outC, d=outD, e=outE, f=outF, g=outG, h=outH, sel=address[0..2], out=out);
}
